    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Monoton&family=Roboto+Mono&display=swap" rel="stylesheet">
    <!-- CSS styling -->
    <link rel="stylesheet" href="headerFooter.css">
    <link rel="stylesheet" href="apiOptions.css">
</head>
<body>

<!-- 1.Header section -->

    <!-- Title section -->
    <div class = "title-section">
        <h1 class="title">Api-Tester</h1>
        <a class="btn btn-dark" href="/logout">Logout</a>
    </div>
    <p>Simple Api testing tool , a simpler clone of Postman</p>

    <!-- Endpoint input field -->
    <form  method="post" action="/endpoint">
        <div class="api-input-container">
            <select class="form-select api-req-type" name="apireq_type">
                <option value="get">GET</option>
                <option value="post">POST</option>
            </select>
            <input type="text" name="apireq_endpoint" class="api-endpoint" placeholder="Enter api endpoint">
            <button type="submit" class="btn btn-primary">Submit</button>

        </div>
        <%- include('apiOptions.ejs')  %>
    </form>
        
<!-- 2. Api params , body , auth section here -->



<!-- 3.JSON response display -->
<div class="json-displayer shadow">
    <pre><%= apiResponse %></pre>
